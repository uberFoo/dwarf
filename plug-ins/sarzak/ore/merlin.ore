// "Anchor" in the store named "merlin"; declared above.
#[proxy(store = "merlin", object = "Anchor")]
struct Anchor {
    id: Uuid,
    offset: float,
    x_offset: int,
    y_offset: int,
    edge: Edge,
    glyph: Glyph,
    x_box: Box,
    line: Line,
    // Non-formalizing relationships
}

